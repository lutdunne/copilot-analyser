# 1️⃣ Fix your .gitignore
cat << 'EOF' > .gitignore
# dependencies
node_modules/
frontend/node_modules/
backend/node_modules/

# next.js
frontend/.next/
frontend/out/

# build
build/
dist/

# uploads
backend/uploads/

# misc
.DS_Store
*.pem

# debug
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# env
.env*
!.env.example

# vercel
.vercel

# typescript
*.tsbuildinfo
next-env.d.ts
EOF